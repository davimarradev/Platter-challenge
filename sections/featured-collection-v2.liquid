  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .custom-scrollbar {
    width: 100%;
    margin: 20px 0;
    display: none;
  }

  @media screen and (min-width: 990px) {
    .custom-scrollbar {
      display: block;
    }
  }

  .scrollbar-track {
    width: 100%;
    height: 8px;
    background-color: #DDD6D7;
    border-radius: 4px;
    position: relative;
    cursor: pointer;
  }

  .scrollbar-thumb {
    display: block!important;
    width: 480px;
    max-width: 80%;
    height: 8px;
    background-color: #000000;
    border-radius: 4px;
    position: absolute;
    top: 0;
    left: 0;
    cursor: grab;
    transition: left 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), height 0.2s ease, top 0.2s ease;
  }

  .scrollbar-thumb:hover,
  .scrollbar-thumb:active {
    height: 12px;
    top: -2px;
  }

  .scrollbar-thumb:active {
    cursor: grabbing;
  }

  .scrollbar-thumb.dragging {
    transition: none;
    height: 12px;
    top: -2px;
  }

  @media screen and (max-width: 749px) {
    .scrollbar-thumb {
      width: 200px;
      max-width: 60%;
    }
    
    .mobile-hidden {
      display: none !important;
    }
  }

  @media screen and (min-width: 990px) {
    .mobile-show-more {
      display: none !important;
    }
    
    
